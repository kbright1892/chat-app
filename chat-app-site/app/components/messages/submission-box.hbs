<div>
  <form {{on "submit" this.submit}}>
    <Input
      class = "text-box"
      @value={{this.input}}
      class="light"
      placeholder="Enter a new message into the log (max. 100 characters)"
      maxlength="100"
    />
    <button type="submit" class="submit-button">Submit</button>
  </form>
</div>