<div>
    <form>
        <Input
                class = "text-box"
                @value={{@message.text}}
                class="light"
                maxlength="100"
        />
        <button type="submit" class="submit-button" {{on "click" this.update}}>Update</button>
        <button type="button" class="submit-button" {{on "click" this.delete}}>Delete Message</button>
    </form>
</div>